<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>HelloWorld</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.HelloWorld</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloWorld</servlet-name>
		<url-pattern>/helloWorld</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ListHotels</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.ListHotels</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListHotels</servlet-name>
		<url-pattern>/listHotels</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ViewHotel</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.ViewHotel</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewHotel</servlet-name>
		<url-pattern>/viewHotel</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AddComment</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.AddComment</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddComment</servlet-name>
		<url-pattern>/addComment</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.Login</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.Logout</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>UserAuthFilter</filter-name>
		<filter-class>ar.edu.itba.it.paw.UserAuthFilter</filter-class>
		<init-param>
			<param-name>avoid-urls</param-name>
			<param-value>/login,/listHotels</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>UserAuthFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
